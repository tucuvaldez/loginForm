{{#if ("user.role == 'admin'")}}
  <h1>Agrega el producto</h1>
  <form id="productForm" class="container d-flex flex-column">
    <label>Nombre</label>
    <input name="name" />
    <label>Tipo (Blanco o Tinto)</label>
    <input name="type" />
    <label>Descripcion</label>
    <input name="description" />
    <label>Precio</label>
    <input name="price" />
    <label>Stock</label>
    <input name="stock" />
    <label>Imagen del producto</label>
    <input type="file" name="Imgurl" />
    <input type="submit" />
  </form>

{{else}}
  <h1>
    Bienvenido:
    {{user.name}}
  </h1>
  {{#if product}}

    <div class="container">
      {{#each product}}
        <div class="productsCard">
          <img src={{Imgurl}} alt="" style="" />
          <h4><b> {{name}} </b></h4>
          <p>Description: {{description}}</p>
          <p> Price: ${{price}}</p>
          <span class="stock" id="stock_{{_id}}">{{stock}}</span>
          <br>
          <button class="add" onclick="addQuantity('{{_id}}')" id="{{_id}}"> + </button>
         <span class="quantity" id="quantity{{_id}}">0</span>
          <button class="subtract" onclick="decreaseQuantity('{{_id}}')" id="{{_id}}"> - </button>
          {{#if isValidToAdd}}
            <a href="http://localhost:8080/api/carts/products/{{_id}}"><button
              >Add to cart</button></a>
          {{else}}
            <button disabled>Is in cart</button>
          {{/if}}
        </div>
      {{/each}}
    </div>

    <div>
      {{#if paginationData.hasPrevPage}}
        <a
          href="http://localhost:8080/products?page={{paginationData.prevPage}}"
        ><button>Preview</button></a>
      {{/if}}
      <p>{{paginationData.page}}</p>
      {{#if paginationData.hasNextPage}}
        <a
          href="http://localhost:8080/products?page={{paginationData.nextPage}}"
        ><button>Next</button></a>
      {{/if}}
    </div>
  {{else}}
    <h1>No products found</h1>
  {{/if}}
{{/if}}
<script src="./js/cart.js"></script>
<script src="./js/product.js"></script>